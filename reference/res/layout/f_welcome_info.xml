<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/lnInfoCardTop"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_top" />

    <ImageView
        android:id="@+id/imWelcomeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg_infocard" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:textSize="@dimen/fontsize_welcometitle"
        android:gravity="center_horizontal"
        android:textColor="@color/text_welcome"
        android:fontFamily="sans-serif-light" />

    <View
        android:layout_below="@id/imWelcomeBanner"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_bottom" />

</RelativeLayout>